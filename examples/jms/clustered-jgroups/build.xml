<project default="run" name="HornetQ Clustering with JGroups Example">

   <import file="../../common/build.xml"/>

   <target name="download-jgroups">
      <mkdir dir="build/jgroups"/>
      <get usetimestamp="true" src="http://sourceforge.net/projects/javagroups/files/JGroups/3.0.10.Final/jgroups-3.0.10.Final.jar" dest="build/jgroups/jgroups.jar"/>
   </target>

   <path id="extra.classpath">
      <fileset dir="build/jgroups">
         <include name="**/*.jar"/>
      </fileset>
      <!-- some class (HornetQLogger) need to be in client jars, fix it and remove this! -->
      <fileset dir="${hornetq.jars.dir}">
         <include name="hornetq-core.jar"/>
      </fileset>
   </path>

   <target name="jar" depends="compile">
      <jar destfile="build/jgroups/jgroups-endpoint.jar" basedir="./build/classes" includes="META-INF/**,org/hornetq/**/JGroupsBroadcastEndpoint.class">
      </jar>
   </target>

   <target name="deploy-jgroups" depends="download-jgroups, compile, jar">
      <copy file="build/jgroups/jgroups.jar" todir="../../../lib"/>
      <copy file="build/jgroups/jgroups-endpoint.jar" todir="../../../lib"/>
   </target>

   <target name="run" depends="deploy-jgroups">
      <antcall target="runExample">
         <param name="example.classname" value="org.hornetq.jms.example.ClusteredJgroupsExample"/>
         <param name="hornetq.example.beans.file" value="server0 server1"/>
      </antcall>
   </target>

   <target name="runRemote">
      <antcall target="runExample">
         <param name="example.classname" value="org.hornetq.jms.example.ClusteredJgroupsExample"/>
         <param name="hornetq.example.runServer" value="false"/>
      </antcall>
   </target>

</project>
